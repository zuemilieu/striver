class Solution{
public:
   vector<int> topoSort(int N, vector<int> adj[]){
       queue<int> que;
      vector<int> indgree(N, 0);
      for(int u =0; u<N; u++){
         for(int &v : adj[u]) {
              indgree[v]++;

  }
}
for(int i =0; i<N; i++)
{
if(indgree[i] == 0){
 que.push(i);
}
}
vector<int> result;
while(!que.empty()){
 int u = que.front;
    result.push_back(u);
   que.pop();
for(int &v : adj[u]){
  indgree[v]--;
if(indgree[v] == 0){
  que.push(v);}
}
}
return result;
};
